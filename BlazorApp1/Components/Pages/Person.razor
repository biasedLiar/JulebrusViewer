@page "/person/{personId}"

@using BlazorApp1.Models
@using ClassLibrary1
@inject IDataAccess _data
@inject IConfiguration _config
@attribute [StreamRendering]

<h3>Person @number</h3>

@if (people.Count() == 0)
{
    <p><em>Loading...</em></p>
} else {
    @foreach (var p in people)
    {
        <p>
            @p.navn + '@(p.events == null)'
        </p>
    }
}

