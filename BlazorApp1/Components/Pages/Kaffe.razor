@page "/kaffe"
@rendermode InteractiveServer

<h1>Tante liker kaffe men ikke te</h1>

<input @bind="text" >

<h2>@likesInput</h2>
<div class="mt-3">
    <button class="btn btn-primary" @onclick="KaffeClick">Kaffe</button>
    <button class="btn btn-primary" @onclick="TeClick">Te</button>
    <img src="https://thispersondoesnotexist.com/" alt="new person" width="100">
</div>

@code {
    private string likesInput = "";

    private string? _text;

    private string? text {
        get => _text;
        set{
            _text = value;
            TextUpdated();
        }
    }

    private void TextUpdated()
    {
        if (text?.ToString().ToLower().Contains('t')??true)
        {
            likesInput = $"Tante liker ikke {text}";
        } else
        {
            likesInput = $"Tante liker {text}.";
        }
    }
    private void TeClick(MouseEventArgs e)
    {
        text = "Te";
    }

    private void KaffeClick(MouseEventArgs e)
    {
        text = "Kaffe";
    }
}
